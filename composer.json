{
    "name": "somerandomdeveloper/mw-dev-kit",
    "description": "Configuration files and utilities for managing MediaWiki development instances.",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "SomeRandomDeveloper",
            "email": "thisisnotmyname275@gmail.com"
        }
    ],
    "require-dev": {
        "mediawiki/mediawiki-codesniffer": "^48.0",
        "php-parallel-lint/php-parallel-lint": "^1.4",
        "mediawiki/minus-x": "^1.1"
    },
	"scripts": {
		"test": [
			"parallel-lint . --exclude core --exclude skins --exclude extensions --exclude services --exclude dumps --exclude vendor --exclude LocalSettings.php",
			"@phpcs",
			"minus-x check ."
		],
		"fix": [
			"minus-x fix .",
			"phpcbf"
		],
		"phan": "phan -d . --long-progress-bar",
		"phpcs": "phpcs -sp --cache --ignore=./core/*,./skins/*,./extensions/*,./services/*,./dumps/*,./vendor/*,LocalSettings.php"
	},
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
